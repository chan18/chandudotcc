@model IDocument

@foreach (IDocument post in Model.GetChildren())
{
    @Html.Partial("/_post.cshtml", post)
}

@{
    IDocument newer = Model.GetDocument(Keys.Previous);
    IDocument older = Model.GetDocument(Keys.Next);
}
@if (older != null || newer != null)
{
    <div>
        <div class="">
            @if (newer != null)
            {
                <a class="" href="@Context.GetLink(newer)" role="button"><i class=""></i> Newer</a>
            }
        </div>
        <div class="">
            @if (older != null)
            {
                <a class="" href="@Context.GetLink(older)" role="button">Older <i class="fas fa-angle-double-right"></i></a>
            }
        </div>
        <div class=""></div>
    </div>
}
