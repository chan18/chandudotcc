@{
    string copyRight = "@";
    
  // title of the blog post
    string title = Document.GetString("Title") ?? Document.GetString("SiteTitle");

    // blog post boolen
    bool isPost = Document.GetBool("IsPost") && title != "Tags" && title != "Archive";

  
}

   <!-- footer -->
    <footer class="p-16 flex flex-row space-x-10  bg-gradient-to-br  from-gray-800  to-gray-900  text-gray-500 ">
      <div class="hidden md:block">
        <div class="m-2 py-12  px-6 bg-gray-800 hover:shadow-2xl hover:shadow-gray-800/50
        hover:-translate-y-1 duration-300  hover:scale-100 ">
          <img src="../img/logo.png" alt="logo" class="h-20 w-19" />
        </div>
        <div>
        </div>
      </div>

       <div class="flex justify-center flex-col ">
         @{
              IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
              IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
          }
          <p> Copyright © @DateTime.Now.Year </p>
          <span class="flex flex-row space-x-3">
            @if (rssFeed != null)
            {
                <a href="@Context.GetLink(rssFeed)" class="flex">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
                </svg>
                  Rss Feed
                </a>
            }
            @if(atomFeed != null)
            {
              <a href="@Context.GetLink(atomFeed)" class="flex">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
                </svg>
                  Atom Feed ⚛
              </a>
            }
          </span>
          <p> <a href="https://statiq.dev" class=""> ✨Generated by Statiq ✨</a> </p>
       </div>
    </footer>